<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Flight Information Card -->
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="627dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="57dp">

        <net.skyscanner.backpack.card.BpkCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:minHeight="150dp"
            app:cardBackgroundColor="#0670E3"
            app:cornerStyle="large"
            app:elevationLevel="focused">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <net.skyscanner.backpack.text.BpkText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:style="@style/bpkTextHeading3"
                    android:text="Flight Information"
                    android:textColor="#ffffff"
                    app:fontFamily="@font/poppins_extralight" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:backgroundTint="@color/bpkWhite" />

                <net.skyscanner.backpack.text.BpkText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="25dp"
                    android:style="@style/bpkTextBodyLongform"
                    android:text="Flight No. 296"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    app:fontFamily="@font/poppins_italic" />
            </LinearLayout>
        </net.skyscanner.backpack.card.BpkCardView>

        <!-- Departure Card -->
        <net.skyscanner.backpack.card.BpkCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:minHeight="150dp"
            app:cardBackgroundColor="#0670E3"
            app:cornerStyle="large"
            app:elevationLevel="focused">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <net.skyscanner.backpack.text.BpkText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:style="@style/bpkTextHeading3"
                    android:text="Departure"
                    android:textColor="#ffffff"
                    app:fontFamily="@font/poppins_extralight" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:backgroundTint="@color/bpkWhite" />

                <net.skyscanner.backpack.text.BpkText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:style="@style/bpkTextHeading4"
                    android:text="KJFK Airport"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    app:fontFamily="@font/poppins_italic" />
                <net.skyscanner.backpack.text.BpkText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:style="@style/bpkTextHeading4"
                    android:text="Departing at 18:00"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    app:fontFamily="@font/poppins_italic" />
            </LinearLayout>


        </net.skyscanner.backpack.card.BpkCardView>

        <!-- Arrival Card -->
        <net.skyscanner.backpack.card.BpkCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:minHeight="150dp"
            app:cardBackgroundColor="#0670E3"
            app:cornerStyle="large"
            app:elevationLevel="focused">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <net.skyscanner.backpack.text.BpkText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:style="@style/bpkTextHeading3"
                    android:text="Arrival"
                    android:textColor="#ffffff"
                    app:fontFamily="@font/poppins_extralight" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:backgroundTint="@color/bpkWhite" />

                <net.skyscanner.backpack.text.BpkText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:style="@style/bpkTextHeading4"
                    android:text="EGLL Airport"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    app:fontFamily="@font/poppins_italic" />

                <net.skyscanner.backpack.text.BpkText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:style="@style/bpkTextHeading4"
                    android:text="Arriving at 02:00"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    app:fontFamily="@font/poppins_italic" />
            </LinearLayout>

        </net.skyscanner.backpack.card.BpkCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>